pipeline {
    agent {
        docker {
            image 'python:3.9-slim'  // Use the official Python image
            args '-v /var/run/docker.sock:/var/run/docker.sock -w /app'  // Set working directory inside the container
        }
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from the repository
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile in the project directory
                    dockerImage = docker.build("my-python-app")
                }
            }
        }
        stage('Run Application') {
            steps {
                script {
                    // Run the application inside the built Docker container
                    dockerImage.inside {
                        // Make sure to use the correct path for Windows environment
                        sh 'python app.py'
                    }
                }
            }
        }
    }
    post {
        always {
            // Clean up Docker resources after the pipeline finishes
            sh 'docker system prune -f'
        }
    }
}
